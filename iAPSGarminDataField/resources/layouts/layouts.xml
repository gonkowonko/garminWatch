        <label id="cob" x="center" y="center" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_LEFT" font="Graphics.FONT_SMALL" />
        <bitmap id="arrow" x="center" y="center" filename="../drawables/Unknown.svg"> 
        <palette>
            <color>FFFFFF</color>
        </palette> 
    </bitmap>
